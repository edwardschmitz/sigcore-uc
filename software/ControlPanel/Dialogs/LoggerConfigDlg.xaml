<Window x:Class="ControlPanel.Dialogs.LoggerConfigDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MySQL Logger Configuration"
        WindowStyle="None"
        ShowInTaskbar="False"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        FontFamily="Segoe UI"
        FontSize="14">

    <Border CornerRadius="8" BorderBrush="#888" BorderThickness="1" Padding="10" Background="White" Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="#805C40" Opacity=".4" BlurRadius="10" ShadowDepth="6"/>
        </Border.Effect>

        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.ColumnSpan="2"
                       Text="MySQL Logger Configuration"
                       FontSize="16"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="5,0,5,10"/>

            <!-- Enabled -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Enabled:" VerticalAlignment="Center" TextAlignment="Right" Margin="5,2" Padding="5,2"/>
            <CheckBox Grid.Row="1" Grid.Column="1"
                      IsChecked="{Binding Enabled, Mode=TwoWay}" Margin="5,2"/>

            <!-- Interval -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Interval (sec):" VerticalAlignment="Center" TextAlignment="Right" Margin="5,2" Padding="5,2"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding IntervalSec, Mode=TwoWay}" Margin="5,2" Padding="5,2"/>

            <!-- Server -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Server:" VerticalAlignment="Center" TextAlignment="Right" Margin="5,2" Padding="5,2"/>
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Server, Mode=TwoWay}" Margin="5,2" Padding="5,2"/>

            <!-- Port -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Port:" VerticalAlignment="Center" TextAlignment="Right" Margin="5,2" Padding="5,2"/>
            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Port, Mode=TwoWay}" Margin="5,2" Padding="5,2"/>

            <!-- Database -->
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Database:" VerticalAlignment="Center" TextAlignment="Right" Margin="5,2" Padding="5,2"/>
            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Database, Mode=TwoWay}" Margin="5,2" Padding="5,2"/>

            <!-- User -->
            <TextBlock Grid.Row="6" Grid.Column="0" Text="User:" VerticalAlignment="Center" TextAlignment="Right" Margin="5,2" Padding="5,2"/>
            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding User, Mode=TwoWay}" Margin="5,2" Padding="5,2"/>

            <!-- Password -->
            <TextBlock Grid.Row="7" Grid.Column="0" Text="Password:" VerticalAlignment="Center" TextAlignment="Right" Margin="5,2" Padding="5,2"/>
            <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding Password, Mode=TwoWay}" Margin="5,2" Padding="5,2"
                         />

            <!-- Table Name -->
            <TextBlock Grid.Row="8" Grid.Column="0" Text="Table Name:" VerticalAlignment="Center" TextAlignment="Right" Margin="5,2" Padding="5,2"/>
            <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding TableName, Mode=TwoWay}" Margin="5,2" Padding="5,2"/>

            <!-- Timeouts -->
            <TextBlock Grid.Row="9" Grid.Column="0" Text="Conn Timeout (s):" VerticalAlignment="Center" TextAlignment="Right" Margin="5,2" Padding="5,2"/>
            <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding ConnectionTimeoutSec, Mode=TwoWay}" Margin="5,2" Padding="5,2"/>

            <TextBlock Grid.Row="10" Grid.Column="0" Text="Cmd Timeout (s):" VerticalAlignment="Center" TextAlignment="Right" Margin="5,2" Padding="5,2"/>
            <TextBox Grid.Row="10" Grid.Column="1" Text="{Binding CommandTimeoutSec, Mode=TwoWay}" Margin="5,2" Padding="5,2"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="11" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5,10,5,0">
                <Button Content="OK" Width="80" Margin="5,2" Padding="5,2" IsDefault="True" Click="Ok_Click"/>
                <Button Content="Cancel" Width="80" Margin="5,2" Padding="5,2" IsCancel="True"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
