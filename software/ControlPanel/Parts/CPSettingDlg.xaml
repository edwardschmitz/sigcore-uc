<Window x:Class="ControlPanel.Parts.CPSettingDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlPanel.Parts"
        xmlns:control="clr-namespace:ControlPanel.Controls"
        mc:Ignorable="d"
       Title="D88A42 Device Settings" Height="670" Width="500"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen"
        >

    <Grid Margin="20">
        <!-- Outer Border with Drop Shadow -->
        <Border Background="White"
                Padding="20"
                CornerRadius="10"
                BorderBrush="Black"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#805C40" Opacity="0.5" BlurRadius="10" ShadowDepth="8"/>
            </Border.Effect>

            <!-- Main Content -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Text="D88A42 Device Settings" FontSize="22" FontWeight="Bold" 
                           HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>

                <!-- Settings StackPanel -->
                <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">

                    <!-- Default Output States Section -->
                    <Border Background="LightGray"
                            Padding="10"
                            CornerRadius="5"
                            BorderBrush="DimGray"
                            BorderThickness="2"
                            Margin="0,20">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Default Output States" FontSize="18" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Margin="0,0,0,10"/>

                            <!-- Digital Outputs -->
                            <StackPanel Orientation="Vertical" Margin="10">
                                <TextBlock Text="Relays (Digital Outputs):" FontSize="16" Margin="0,5"/>
                                <StackPanel Orientation="Horizontal">
                                    <StackPanel Orientation="Vertical">
                                        <StackPanel Orientation="Horizontal" Margin="20,2">
                                            <TextBlock Text="R1" VerticalAlignment="Center"
                                               FontSize="16"
                                               Margin="5,2"/>
                                            <control:ButtonCheckBox Width="100" />

                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="20,2">
                                            <TextBlock Text="R2" VerticalAlignment="Center"
                                               FontSize="16"
                                               Margin="5,2"/>
                                            <control:ButtonCheckBox Width="100" />

                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="20,2">
                                            <TextBlock Text="R3" VerticalAlignment="Center"
                                               FontSize="16"
                                               Margin="5,2"/>
                                            <control:ButtonCheckBox Width="100" />

                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="20,2">
                                            <TextBlock Text="R4" VerticalAlignment="Center"
                                               FontSize="16"
                                               Margin="5,2"/>
                                            <control:ButtonCheckBox Width="100" />

                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical">
                                        <StackPanel Orientation="Horizontal" Margin="20,2">
                                            <TextBlock Text="R5" VerticalAlignment="Center"
                                               FontSize="16"
                                               Margin="5,2"/>
                                            <control:ButtonCheckBox Width="100" />

                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="20,2">
                                            <TextBlock Text="R6" VerticalAlignment="Center"
                                               FontSize="16"
                                               Margin="5,2"/>
                                            <control:ButtonCheckBox Width="100" />

                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="20,2">
                                            <TextBlock Text="R7" VerticalAlignment="Center"
                                               FontSize="16"
                                               Margin="5,2"/>
                                            <control:ButtonCheckBox Width="100" />

                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="20,2">
                                            <TextBlock Text="R8" VerticalAlignment="Center"
                                               FontSize="16"
                                               Margin="5,2"/>
                                            <control:ButtonCheckBox Width="100" />

                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>

                            <!-- Analog Outputs -->
                            <StackPanel Orientation="Vertical" Margin="10">
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Button Panel -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
                    <Button Content="Save"
                            BorderBrush="DimGray"
                            BorderThickness="2"
                            Padding="20,5"
                            FontSize="24"
                            FontWeight="Bold"
                            Margin="0,0,20,0"
                            x:Name="SaveBtn"
                            Click="SaveSettings"
                            />

                    <Button Content="Close"
                            BorderBrush="DimGray"
                            BorderThickness="2"
                            Padding="20,5"
                            FontSize="24"
                            FontWeight="Bold"
                            x:Name="CancelBtn"
                            Click="CloseWindow"
                            />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>