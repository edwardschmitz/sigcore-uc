<Window x:Class="ControlPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlPanel.Parts"
        xmlns:control="clr-namespace:ControlPanel.Controls"
        xmlns:handlers ="clr-namespace:ControlPanel.IOChannelHandlers"
        WindowState="Maximized"
        mc:Ignorable="d"
        d:DataContext="MainWindowVM"
        Title="MainWindow" Height="450" Width="800">


    <Grid x:Name="RootGrid">
        <Viewbox Stretch="Uniform" Margin="10">
            <Grid HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="30,0,0,0">
                    <control:HamburgerButton x:Name="UnitNameButton" Grid.Column="2"
                                         Command="{Binding Path=SettingsCmd}"
                         VerticalAlignment="Top" Margin="0,8,0,0" ToolTip="Edit Properties"/>

                    <StackPanel>
                        <TextBlock Text="{Binding Path=Name}" 
                                   FontSize="36" FontWeight="Bold"
                                   HorizontalAlignment="Left"
                                   Margin="0"
                                   />
                        <TextBlock Text="{Binding Path=SerialNum}" 
                                   FontSize="16" FontWeight="Bold"
                                   HorizontalAlignment="Left"
                                   Margin="0,0,0,0"
                                   />
                        <StackPanel Orientation="Horizontal"
                                    Grid.Row="2" Grid.Column="0"
                                    >
                            <TextBlock Text="{Binding Path=Rev}" 
                                       FontSize="16" FontWeight="Bold"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,0"
                                       />
                            <TextBlock Text=" / v"
                                       FontSize="16" FontWeight="Bold"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,0"
                                       />
                            <TextBlock Text="{Binding Path=Ver}" 
                                       FontSize="16" FontWeight="Bold"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,0"
                                       />
                        </StackPanel>
                        <TextBlock Text="{Binding Path=IPAddress}" 
                                   FontSize="16" FontWeight="Bold"
                                   HorizontalAlignment="Left"
                                   Margin="0,0,0,0"
                                   />
                    </StackPanel>
                </StackPanel>

                <control:GroupControl Grid.Row="4" Grid.Column="0" 
                            Header="Relay Outputs" IsExpanded="True"
                            Margin="5" HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left"
                    Margin="5,2">
                        <ItemsControl ItemsSource="{Binding Relays}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type handlers:RelayChannel}">
                                    <control:RelayControl
                                    Width="150"
                                    Margin="4"
                                    Label="{Binding Label}"
                                    IsRelayOn="{Binding Value, Mode=TwoWay}"
                                    UserID="{Binding UserID}"
                                    Channel="{Binding Path=Index, Mode=OneWay}"
                                    ConfigCommand="{Binding EditCommand}"
                                    />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </control:GroupControl>

                <StackPanel Orientation="Horizontal" 
                    Grid.Row="5" Grid.Column="0" 
                    HorizontalAlignment="Left" 
                        Margin="0,0,0,20"
                    >
                    <control:GroupControl Grid.Row="4" Grid.Column="0" Width="355"
                      Header="Digital Inputs"
                      Margin="5,5,5,5"
                      HorizontalAlignment="Left">

                        <ItemsControl ItemsSource="{Binding DigitalInputs}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type handlers:DigitalInChannel}">
                                    <control:DigitalInputControl
                                    Width="300"
                                    Margin="3"
                                    Label="{Binding Label}"
                                    IsInputActive="{Binding Value, Mode=TwoWay}"
                                    UserID="{Binding UserID}"
                                    Channel="{Binding Path=Index, Mode=OneWay}"
                                    ConfigCommand="{Binding EditCommand}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </control:GroupControl>

                    <StackPanel>
                        <control:GroupControl
                                              Header="Analog Inputs"
                                              VerticalAlignment="Top"
                                              Margin="5"
                                              HorizontalAlignment="Left">

                            <ItemsControl ItemsSource="{Binding AnalogInputs}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="{x:Type handlers:AnalogInChannel}">
                                        <control:AnalogInputControl
                                            Width="425"
                                            Margin="3"
                                            Label="{Binding Label}"
                                            Value="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Precision="{Binding Precision}"
                                            Display="{Binding Display}"
                                            Units="{Binding Units}"
                                            UserID="{Binding UserID}"
                                            Channel="{Binding Path=Index, Mode=OneWay}"
                                            ConfigCommand="{Binding EditCommand}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </control:GroupControl>
                        <control:GroupControl Header="Functions" x:Name="FunctionsGrp"
                                  Margin="5,5,5,5" Height="185"
                                  >
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="20,0" >
                                    <Button Content="Connect" FontSize="16" FontWeight="Bold"
                                            Margin="5,2" Padding="20,5"
                                            Command="{Binding ConnectCmd}"/>
                                    <Button Content="Restart" FontSize="16" FontWeight="Bold"
                                            Margin="5,2" Padding="20,5"
                                            Command="{Binding RestartCmd}"
                                            />
                                    <Button Content="Get Status" 
                                            Margin="5,2" Padding="20,5"
                                            FontSize="16" FontWeight="Bold"
                                            Command="{Binding GetStatusCmd}"
                                            />

                                </StackPanel>

                                <StackPanel Margin="20,0">
                                    <Button Content="Reset" 
                                            BorderBrush="DimGray"
                                            Padding="20,5"
                                            Width="120"
                                            HorizontalAlignment="Center" VerticalAlignment="Top" 
                                            FontSize="16" FontWeight="Bold"
                                            Command="{Binding Path=ResetCmd}"
                                            Margin="5,2"
                                            />
                                    <Button Content="Settings" 
                                            BorderBrush="DimGray"
                                            Padding="20,5"
                                            Width="120"
                                            HorizontalAlignment="Center" VerticalAlignment="Top" 
                                            FontSize="16" FontWeight="Bold"
                                            Command="{Binding Path=SettingsCmd}"
                                            Margin="2"
                                            />
                                </StackPanel>
                            </StackPanel>
                        </control:GroupControl>
                    </StackPanel>
                    <StackPanel>
                        <control:GroupControl Header="Analog Outputs"
                                                VerticalAlignment="Top"
                                                Margin="5"
                                                HorizontalAlignment="Left">

                            <ItemsControl ItemsSource="{Binding AnalogOutputs}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="{x:Type handlers:AnalogOutChannel}">
                                        <control:AnalogOutputControl
                                            Width="425"
                                            Margin="3"

                                            Label="{Binding Label}"
                                            Units="{Binding Units}"
                                            UserID="{Binding UserID}"
                                            Channel="{Binding Index}"
                                            IsInputEnabled="{Binding IsEnabled}"
                                            ConfigCommand="{Binding EditCommand}"

                                            MinSlider="{Binding MinValue}"
                                            MaxSlider="{Binding MaxValue}"

                                            DisplayValue="{Binding DisplayValue}"              
                                            EditValue="{Binding EditValue, Mode=TwoWay}"
                                            />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </control:GroupControl>

                        <Grid>
                            <control:GroupControl Header="Logging" 
                                                  Height="185"
                                  Margin="5,5,5,5"
                                  >
                                <StackPanel>
                                    <control:ButtonCheckBox 
                                        IsChecked="{Binding IsLogging}"
                                        Width="150" Margin="0,22,0,0"/>
                                    <TextBlock Text="{Binding LogStatus}" HorizontalAlignment="Center" 
                                           FontSize="16" FontWeight="Bold"
                                           Margin="5,2" Padding="5,2"
                                           />
                                </StackPanel>
                            </control:GroupControl>
                            <control:HamburgerButton x:Name="LoggingConfig" Grid.Column="2"
                                                    Command="{Binding Path=LogConfigCmd}"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top" Margin="0,12,20,0" ToolTip="Edit Properties"/>

                        </Grid>
                    </StackPanel>
                </StackPanel>

                <control:GroupControl Grid.Column="1" Grid.Row="3" Grid.RowSpan="10"
                      Header="PIDs"
                      Width="Auto"
                      Height="Auto"
                      IsCollapsible="{Binding Path=ShowPIDs}"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Left"
                                      IsExpanded="False"
                      Margin="5">

                    <!-- The ItemsControl dynamically creates a PidLoopControl for each PID channel -->
                    <ItemsControl ItemsSource="{Binding PidControllers}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <!-- Arrange them in rows of two like your original layout -->
                                <UniformGrid Columns="2" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type handlers:PidControllerChannel}">
                                <control:PidLoopControl Margin="5"
                                                        Title="{Binding UserID}"
                                                        Setpoint="{Binding Setpoint}"
                                                        ProcessValue="{Binding ProcessValue}"
                                                        Output="{Binding Output}"
                                                        Tolerance="{Binding Tolerance}"
                                                        IsAutoMode="{Binding IsAutoMode}"
                                                        ConfigCommand="{Binding EditCommand}"
                                                        RampTime="{Binding RampTime}"
                                                        RampTarget="{Binding RampTarget}"
                                                        Ramp="{Binding IsRamping}"
                                                        IsUiEnabled="{Binding IsEnabled}"
                                                        Visibility="{Binding PIDVis}" 
                                                        OutputMax="{Binding OutputMax}"
                                                        OutputMin="{Binding OutputMin}"
                                                        Crossover="0"
                                                        ProcessValueMaximum="{Binding PVMax}"
                                                        ProcessValueMinimum="{Binding PVMin}"
                                                        />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </control:GroupControl>



            </Grid>
        </Viewbox>
        <Border x:Name="DimOverlay"
                Visibility="{Binding Path=WindowVis}"
                Background="#A0FFFFFF"   
                IsHitTestVisible="False"/>
    </Grid>
</Window>
