<Window x:Class="Certification.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Certification"
        mc:Ignorable="d"
        Loaded="MainWindow_Loaded"
        Title="MainWindow" Height="800" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="0"
                    Grid.RowSpan="20">
            <Button Margin="5,2" Padding="10,2" x:Name="GetGlobalConfig"
                    Content="Get Global Config" 
                    Command="{Binding Path=GetGlobalConfigCmd}"/>
            <Button Margin="5,2" Padding="10,2" x:Name="SaveGlobalConfig"
                    Content="Save Global Config"
                    Command="{Binding Path=SaveGlobalConfigCmd}"/>
        </StackPanel>

        <TextBlock Grid.Column="1" Grid.Row="0" Text="Server Name" 
                   Margin="5,2" Padding="5,2" TextAlignment="Right"/>
        <TextBlock Grid.Column="1" Grid.Row="1" Text="Serial Number" 
                   Margin="5,2" Padding="5,2" TextAlignment="Right"/>
        <TextBlock Grid.Column="1" Grid.Row="2" Text="Status" 
                   Margin="5,2" Padding="5,2" TextAlignment="Right"/>
        <TextBlock Grid.Column="1" Grid.Row="3" Text="Firmware Version" 
                   Margin="5,2" Padding="5,2" TextAlignment="Right"/>
        <TextBlock Grid.Column="1" Grid.Row="4" Text="Hardware Revision" 
                   Margin="5,2" Padding="5,2" TextAlignment="Right"/>
        <TextBlock Grid.Column="1" Grid.Row="5" Text="SigCore Protocol" 
                   Margin="5,2" Padding="5,2" TextAlignment="Right"/>
        <TextBlock Grid.Column="1" Grid.Row="6" Text="Modbus Protocol" 
                   Margin="5,2" Padding="5,2" TextAlignment="Right"/>
        <TextBlock Grid.Column="1" Grid.Row="7" Text="Host Name" 
                   Margin="5,2" Padding="5,2" TextAlignment="Right"/>
        <TextBlock Grid.Column="1" Grid.Row="8" Text="IP Address" 
                   Margin="5,2" Padding="5,2" TextAlignment="Right"/>
        <TextBlock Grid.Column="1" Grid.Row="9" Text="Up Time" 
                   Margin="5,2" Padding="5,2" TextAlignment="Right"/>
        <TextBlock Grid.Column="1" Grid.Row="20" Text="Relay/Analog Loop Back" 
                   Margin="5,2" Padding="5,2" TextAlignment="Right"/>
        <TextBlock Grid.Column="1" Grid.Row="21" Text="PWM Loop Back" 
                   Margin="5,2" Padding="5,2" TextAlignment="Right"/>
        <TextBlock Grid.Column="1" Grid.Row="22" Text="GND Sense" 
                   Margin="5,2" Padding="5,2" TextAlignment="Right"/>
        <TextBlock Grid.Column="1" Grid.Row="23" Text="5V Test" 
                   Margin="5,2" Padding="5,2" TextAlignment="Right"/>
        <TextBlock Grid.Column="1" Grid.Row="24" Text="10V Test" 
                   Margin="5,2" Padding="5,2" TextAlignment="Right"/>
        <TextBlock Grid.Column="1" Grid.Row="25" Text="256mV Test" 
                   Margin="5,2" Padding="5,2" TextAlignment="Right"/>
        <TextBlock Grid.Column="1" Grid.Row="26" Text="Modbus Protocol" 
                   Margin="5,2" Padding="5,2" TextAlignment="Right"/>
        <TextBlock Grid.Column="1" Grid.Row="27" Text="USB Protocol" 
                   Margin="5,2" Padding="5,2" TextAlignment="Right"/>

        <TextBox Grid.Column="2" Grid.Row="0" Padding="5,2" Margin="5,2"
                 x:Name="ServerName" Text="{Binding Path=ServerName}"/>
        <TextBox Grid.Column="2" Grid.Row="1" Padding="5,2" Margin="5,2"
                 x:Name="SerialNumber" Text="{Binding Path=SerialNumber}"/>
        <TextBox Grid.Column="2" Grid.Row="2" Padding="5,2" Margin="5,2"
                 x:Name="Status" Text="{Binding Path=Status}" IsReadOnly="True"/>
        <TextBox Grid.Column="2" Grid.Row="3" Padding="5,2" Margin="5,2"
                 x:Name="Firmware" Text="{Binding Path=Firmware}" IsReadOnly="True"/>
        <TextBox Grid.Column="2" Grid.Row="4" Padding="5,2" Margin="5,2"
                 x:Name="HWRevision" Text="{Binding Path=HWRevision}"/>
        <TextBox Grid.Column="2" Grid.Row="5" Padding="5,2" Margin="5,2"
                 x:Name="SCProtocol" Text="{Binding Path=SCProtocol}" IsReadOnly="True"/>
        <TextBox Grid.Column="2" Grid.Row="6" Padding="5,2" Margin="5,2"
                 x:Name="MBusProtocol" Text="{Binding Path=MBusProtocol}" IsReadOnly="True"/>
        <TextBox Grid.Column="2" Grid.Row="7" Padding="5,2" Margin="5,2"
                 x:Name="Hostname" Text="{Binding Path=Hostname}"/>
        <TextBox Grid.Column="2" Grid.Row="8" Padding="5,2" Margin="5,2"
                 x:Name="IPAddress" Text="{Binding Path=IPAddress}" IsReadOnly="True"/>
        <TextBox Grid.Column="2" Grid.Row="9" Padding="5,2" Margin="5,2"
                 x:Name="UpTime" Text="{Binding Path=UpTime}" IsReadOnly="True"/>
        <Button Grid.Column="2" Grid.Row="20" Padding="10,2" Margin="5,2"
                x:Name="RelayLoopBackBtn" Content="Test"
                Command="{Binding Path=RelayLoopBackCommand}"
                />
        <Button Grid.Column="2" Grid.Row="21" Padding="10,2" Margin="5,2"
                x:Name="PWMLoopBackBtn" Content="Test"
                Command="{Binding Path=PWMLoopBackCommand}"
                />
        <Button Grid.Column="2" Grid.Row="22" Padding="10,2" Margin="5,2"
                x:Name="GNDSenseBtn" Content="Test"
                />
        <Button Grid.Column="2" Grid.Row="23" Padding="10,2" Margin="5,2"
                x:Name="V5Btn" Content="Test"
                />
        <Button Grid.Column="2" Grid.Row="24" Padding="10,2" Margin="5,2"
                x:Name="V10Btn" Content="Test"
                />
        <Button Grid.Column="2" Grid.Row="25" Padding="10,2" Margin="5,2"
                x:Name="mV256Btn" Content="Test"
                />
        <Button Grid.Column="2" Grid.Row="26" Padding="10,2" Margin="5,2"
                x:Name="ModbusBtn" Content="Test"
                />
        <Button Grid.Column="2" Grid.Row="27" Padding="10,2" Margin="5,2"
                x:Name="USBBtn" Content="Test"
                />

        <TextBlock Grid.Column="1" Grid.Row="35" Padding="5,2" Margin="5,2"
                   Grid.ColumnSpan="2" TextWrapping="Wrap"
                   x:Name="Results" Text="{Binding Path=Results}"/>

    </Grid>
</Window>
