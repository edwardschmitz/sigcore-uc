<Window x:Class="SigCoreTestClient.SystemConfigDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SigCoreCommon;assembly=SigCoreCommon"
        WindowStartupLocation="CenterScreen"
        Title="System Configuration" Height="650" Width="560">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Buttons on the left -->
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="16" Orientation="Vertical" VerticalAlignment="Top">
            <Button x:Name="SaveBtn" Content="Save" Width="80" Margin="4"/>
            <Button x:Name="CloseBtn" Content="Cancel" Width="80" Margin="4"/>
        </StackPanel>

        <!-- System Info -->
        <TextBlock Grid.Row="0" Grid.Column="1" Text="System Name:" VerticalAlignment="Center" Margin="4" TextAlignment="Right"/>
        <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding SystemName}" Margin="4" Padding="5,2"/>

        <TextBlock Grid.Row="1" Grid.Column="1" Text="Serial Number:" VerticalAlignment="Center" Margin="4" TextAlignment="Right"/>
        <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding SerialNumber}" Margin="4" Padding="5,2" IsReadOnly="True"/>

        <TextBlock Grid.Row="2" Grid.Column="1" Text="Hardware Version:" VerticalAlignment="Center" Margin="4" TextAlignment="Right"/>
        <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding HardwareVersion}" Margin="4" Padding="5,2" IsReadOnly="True"/>

        <TextBlock Grid.Row="3" Grid.Column="1" Text="Software Version:" VerticalAlignment="Center" Margin="4" TextAlignment="Right"/>
        <TextBox Grid.Row="3" Grid.Column="2" Text="{Binding SoftwareVersion}" Margin="4" Padding="5,2" IsReadOnly="True"/>

        <!-- Sampling -->
        <TextBlock Grid.Row="4" Grid.Column="1" Text="Analog Sampling Rate:" VerticalAlignment="Center" Margin="4" TextAlignment="Right"/>
        <ComboBox Grid.Row="4" Grid.Column="2" ItemsSource="{Binding SamplingRateValues}" SelectedItem="{Binding SamplingRate}" Margin="4" Padding="5,2"/>

        <TextBlock Grid.Row="5" Grid.Column="1" Text="PWM Frequency:" VerticalAlignment="Center" Margin="4" TextAlignment="Right"/>
        <TextBox Grid.Row="5" Grid.Column="2" Text="{Binding PWMFrequency}" Margin="4" Padding="5,2"/>

        <CheckBox Grid.Row="6" Grid.Column="2" IsChecked="{Binding UseLastKnown}" Content="Use Last Known Values at Startup" Margin="4" Padding="5,2"/>

        <!-- Networking -->
        <TextBlock Grid.Row="7" Grid.Column="1" Text="Hostname:" VerticalAlignment="Center" Margin="4" TextAlignment="Right"/>
        <TextBox Grid.Row="7" Grid.Column="2" Text="{Binding Hostname}" Margin="4" Padding="5,2"/>

        <CheckBox Grid.Row="8" Grid.Column="2" IsChecked="{Binding DhcpEnabled}" Content="DHCP Enabled" Margin="4" Padding="5,2"/>

        <TextBlock Grid.Row="9" Grid.Column="1" Text="IP Address:" VerticalAlignment="Center" Margin="4" TextAlignment="Right"/>
        <TextBox Grid.Row="9" Grid.Column="2" Text="{Binding IpAddress}" Margin="4" Padding="5,2"/>

        <TextBlock Grid.Row="10" Grid.Column="1" Text="Subnet Mask:" VerticalAlignment="Center" Margin="4" TextAlignment="Right"/>
        <TextBox Grid.Row="10" Grid.Column="2" Text="{Binding SubnetMask}" Margin="4" Padding="5,2"/>

        <TextBlock Grid.Row="11" Grid.Column="1" Text="Gateway:" VerticalAlignment="Center" Margin="4" TextAlignment="Right"/>
        <TextBox Grid.Row="11" Grid.Column="2" Text="{Binding Gateway}" Margin="4" Padding="5,2"/>

        <TextBlock Grid.Row="12" Grid.Column="1" Text="DNS Server:" VerticalAlignment="Center" Margin="4" TextAlignment="Right"/>
        <TextBox Grid.Row="12" Grid.Column="2" Text="{Binding Dns}" Margin="4" Padding="5,2"/>

        <!-- Password -->
        <TextBlock Grid.Row="13" Grid.Column="1" Text="System Password:" VerticalAlignment="Center" Margin="4" TextAlignment="Right"/>
        <TextBox Grid.Row="13" Grid.Column="2" Text="{Binding SystemPassword}" Margin="4" Padding="5,2"/>
    </Grid>
</Window>
