<Window x:Class="SigCoreTestClient.RelayConfigDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SigCoreCommon;assembly=SigCoreCommon"
        WindowStartupLocation="CenterScreen"
        Title="Relay Configuration" Height="300" Width="500">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Buttons on the left -->
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" Orientation="Vertical" VerticalAlignment="Top">
            <Button x:Name="SaveBtn" Content="Save" Width="80" Margin="4"/>
            <Button x:Name="CloseBtn" Content="Cancel" Width="80" Margin="4"/>
        </StackPanel>

        <!-- Name -->
        <TextBlock Grid.Row="0" Grid.Column="1" Text="Name:" VerticalAlignment="Center" Margin="4" TextAlignment="Right"/>
        <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding Name}" Margin="4" Padding="5,2"/>

        <!-- Default State -->
        <TextBlock Grid.Row="1" Grid.Column="1" Text="Default State:" VerticalAlignment="Center" Margin="4" TextAlignment="Right"/>
        <CheckBox Grid.Row="1" Grid.Column="2" IsChecked="{Binding DefaultState}" Margin="4" Padding="5,2"/>

        <!-- Fail Safe State -->
        <TextBlock Grid.Row="2" Grid.Column="1" Text="Fail Safe State:" VerticalAlignment="Center" Margin="4" TextAlignment="Right"/>
        <CheckBox Grid.Row="2" Grid.Column="2" IsChecked="{Binding FailSafeState}" Margin="4" Padding="5,2"/>
    </Grid>
</Window>
