                           FontSize="16" FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>

                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock Text="SP:" Width="45" VerticalAlignment="Center" TextAlignment="Right"/>
                                <TextBox x:Name="PID1SP" Width="80" Margin="5,0"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock Text="PV:" Width="45" VerticalAlignment="Center" TextAlignment="Right"/>
                                <TextBox x:Name="PID1PV" Width="80" Margin="5,0" IsReadOnly="True"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock Text="Out:" Width="45" VerticalAlignment="Center" TextAlignment="Right"/>
                                <TextBox x:Name="PID1Output" Width="80" Margin="5,0" IsReadOnly="True"/>
                            </StackPanel>

                            <!-- Auto/Config buttons -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
