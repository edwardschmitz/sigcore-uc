                            Padding="8,3" Margin="3" FontWeight="Bold"/>
                                <Button x:Name="PID1ConfigBtn" Content="Config"
                            Padding="8,3" Margin="3" FontWeight="Bold"/>
                            </StackPanel>

                            <!-- Reset button below -->
                            <Button x:Name="PID1ResetBtn" Content="Reset"
                        Padding="8,3" Margin="3,6,3,0"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"/>
