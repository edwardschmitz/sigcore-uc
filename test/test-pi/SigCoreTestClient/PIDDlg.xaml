<Window x:Class="SigCoreTestClient.PIDDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SigCoreTestClient"
        mc:Ignorable="d"
        Title="PIDDlg" Height="450" Width="500">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0"
                    Grid.RowSpan="20">
            <Button x:Name="Close" IsCancel="True" Content="Close"
                    Margin="5,2" Padding="20,2"/>
            <Button x:Name="Disable" Content="Disable"
                    Margin="5,2" Padding="20,2"/>
            <Button x:Name="Auto" Content="Auto Mode"
                    Margin="5,2" Padding="20,2"/>
            <Button x:Name="Ramp" Content="Start Ramp"
                    Margin="5,2" Padding="20,2"/>
            <Button x:Name="Tune" Content="Tune"
                    Margin="5,2" Padding="20,2"/>
            <Button x:Name="SendValues" Content="Send Values"
                    Margin="5,2" Padding="20,2"/>
        </StackPanel>

        <TextBlock Text="Name" TextAlignment="Right" Grid.Column="1" Grid.Row="0"
           Margin="5,2" Padding="5,2" />
        <TextBlock Text="Number" TextAlignment="Right" Grid.Column="1" Grid.Row="1"
           Margin="5,2" Padding="5,2" />
        <TextBlock Text="SP" TextAlignment="Right" Grid.Column="1" Grid.Row="2"
           Margin="5,2" Padding="5,2" />
        <TextBlock Text="PV" TextAlignment="Right" Grid.Column="1" Grid.Row="3"
           Margin="5,2" Padding="5,2" />
        <TextBlock Text="Output" TextAlignment="Right" Grid.Column="1" Grid.Row="4"
           Margin="5,2" Padding="5,2" />
        <TextBlock Text="Tolerance" TextAlignment="Right" Grid.Column="1" Grid.Row="5"
           Margin="5,2" Padding="5,2" />
        <TextBlock Text="Deviation" TextAlignment="Right" Grid.Column="1" Grid.Row="6"
           Margin="5,2" Padding="5,2" />
        <TextBlock Text="Mode" TextAlignment="Right" Grid.Column="1" Grid.Row="7"
           Margin="5,2" Padding="5,2" />

        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
         Grid.Column="2" Grid.Row="0"
         Margin="5,2" Padding="5,2" IsReadOnly="False" />

        <TextBox Text="{Binding Number}" 
         Grid.Column="2" Grid.Row="1"
         Margin="5,2" Padding="5,2" IsReadOnly="True" />

        <TextBox Text="{Binding SetPoint, UpdateSourceTrigger=PropertyChanged}" 
         Grid.Column="2" Grid.Row="2"
         Margin="5,2" Padding="5,2" IsReadOnly="False" />

        <TextBox Text="{Binding ProcessVariable}" 
         Grid.Column="2" Grid.Row="3"
         Margin="5,2" Padding="5,2" IsReadOnly="True" />

        <TextBox Text="{Binding Output}" 
         Grid.Column="2" Grid.Row="4"
         Margin="5,2" Padding="5,2" IsReadOnly="True" />

        <TextBox Text="{Binding Tolerance, UpdateSourceTrigger=PropertyChanged}" 
         Grid.Column="2" Grid.Row="5"
         Margin="5,2" Padding="5,2" IsReadOnly="False" />

        <TextBox Text="{Binding Deviation}" 
         Grid.Column="2" Grid.Row="6"
         Margin="5,2" Padding="5,2" IsReadOnly="True" />

        <TextBox Text="{Binding Mode, UpdateSourceTrigger=PropertyChanged}" 
         Grid.Column="2" Grid.Row="7"
         Margin="5,2" Padding="5,2" IsReadOnly="False" />
    </Grid>
</Window>
